{
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Live LLM (web)",
            "configurations": [
                "Live LLM Server",
                "Client (Server)",
                "Client (Chrome)"
            ]
        },
        {
            "name": "Live LLM (CLI)",
            "configurations": [
                "Live LLM Server",
                "Input Client",
                "Output Client"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Live LLM Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "server:app",
                "--host", "0.0.0.0",
                "--port", "8000",
                "--reload",
                "--log-level", "info"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Input Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/input_client.py",
            "args": [
                "--host", "localhost",
                "--port", "8000",
                "--max-retries", "10"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Output Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/output_client.py",
            "args": [
                "--host", "localhost",
                "--port", "8000",
                "--max-retries", "10"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false
        },
        {
            "name": "Client (Server)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "preLaunchTask": "build-npm",
            "runtimeArgs": ["serve", "-s", "dist", "-l", "3030"],
            "cwd": "${workspaceFolder}/client",
            "console": "integratedTerminal"
        },
        {
            "name": "Client (Chrome)",
            "type": "chrome",
            "request": "launch",
            "browserLaunchLocation": "ui",
            "runtimeExecutable": "stable",
            "url": "http://localhost:3030",
            "webRoot": "${workspaceFolder}/client",
            "preLaunchTask": "clientPrelaunch",
            "userDataDir": "${workspaceFolder}/.vscode/cache",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/client/dist/**/*.js"
            ]
        }        
    ]
}
