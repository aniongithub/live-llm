{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "waitForClient",
            "type": "shell",
            "command": "while ! nc -z localhost 3030; do sleep 1; done",
            "group": "none",
            "problemMatcher": {
                "base": "$tsc",
                "background": {
                    "beginsPattern": ".*",
                    "endsPattern": ".*"
                }
            }
        },
        {
            "label": "clientPrelaunch",
            "type": "shell",
            "command": "echo 'Preparing Chrome debugger...'",
            "dependsOn": [
                "waitForClient"
            ],
            "problemMatcher": []
        },
        {
            "label": "build-npm",
            "type": "shell",
            "command": "cd client && npm install && npm run build",
        },
        {
            "label": "dev-npm",
            "type": "shell",
            "command": "cd client && npm install && npm run dev",
        }
    ]
}